extends layout

block content
  .container
    h3.text-center Home page

    .row
      .com-md-6
        label Original link
          span.red-color *
        input.form-control.real-link(placeholder='Input original url')
      .com-md-6
        label Your short link (not required, stay empty for auto generating)
        input.form-control.short-link(placeholder='Input short url')
      .com-md-6.m-t-10
        button.form-control.btn.btn-default(onclick='getShortLink()') Send

    .row.min-height-50.m-t-10.m-b-10
      .errors-list
        span.animation-text.red-color.col-md-12.error-real-link This URL does not exist
        span.animation-text.red-color.col-md-12.error-short-link This short URL is already in use
        span.animation-text.red-color.col-md-12.error-short-invalid Short link must contain only letters and numbers
    .row
      label Your links list
      .list-links
  script(src='/javascripts/home.js')
