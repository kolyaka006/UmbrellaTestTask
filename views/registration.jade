extends layout

block content
  .container
    h3.text-center Registration account
    .row
      .com-md-6
        label Email
          span.red-color *
        input.form-control.email(placeholder='Your email address')
      .com-md-6
        label Password
          span.red-color *
        input.form-control.password(placeholder='Create a password')
      .com-md-6
        label Confirm password
        input.form-control.confirm(placeholder='Confirm your password')
      .com-md-6.m-t-10
        button.form-control.btn.btn-default(onclick='registration()') Registration

    .row.min-height-50.m-t-10.m-b-10
      .errors-list
        span.animation-text.red-color.col-md-12.error-confirm Password and confirm password do not match!
